<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud"
    android:orientation="vertical"
    tools:context=".Number1Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/jaya01"
            android:scaleType="centerCrop"/>
        <Button
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:paddingLeft="8dp"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:text="end"
            android:drawableRight="@drawable/ic__right"
            android:background="@color/black"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <Button
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:paddingRight="8dp"
            android:textSize="12sp"
            android:text="Back"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/ic_left"
            android:background="@color/black"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:onClick="BackTo2"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="@string/mtcartenz"
        android:gravity="center"
        android:background="@color/colorPrimary"/>

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"

        android:gravity="center"
        android:textColor="@color/black"
        android:text="@string/desc_mtjaya"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="16dp"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_launch"
            android:textColor="@color/black"
            android:paddingRight="8dp"
            android:text="Name"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:paddingLeft="8dp"
            android:text="Pegumumgan Jayawijaya"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="16dp"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_launch"
            android:textColor="@color/black"
            android:paddingRight="8dp"
            android:text="Height"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:paddingLeft="8dp"
            android:text="4884 m"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="16dp"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_launch"
            android:textColor="@color/black"
            android:paddingRight="8dp"
            android:text="Island"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:paddingLeft="8dp"
            android:text="Papua"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:onClick="showOnMap"
            android:layout_weight="1"
            android:src="@drawable/map" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="showVideo"
            android:src="@drawable/youtube" />
    </LinearLayout>
</LinearLayout>